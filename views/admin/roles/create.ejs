<div class="container">
	<div class="page-header">
		<h1 class="page-title"><i class="fas fa-users-between-lines"></i> Role Management</h1>
		<p class="page-subtitle">Add, edit or delete roles - may impact permissions to sections of the website</p>
	</div>
    
    <%- include('../partials/menu', { activePage: activePage, activeSubPage: activeSubPage }) %>
		
	<div class="cards cards-1">
		<div class="card">
			<div class="card-header">
				<h2>
					<i class="fas fa-plus"></i> Create Role
				</h2>
			</div>
			<form method="post">
				<div class="card-body">
					<div class="row">
						<div class="col-md-6 mb-3">
							<label for="role_name" class="form-label">Role Name</label>
							<input type="text" class="form-control" name="name" id="role_name" required="" placeholder="Enter Role Name here">
                </div>
					</div>
					<div class="row">
						<div class="col-md-12 btn-group">
							
						</div>
					</div>
				</div>
				<div class="card-footer">
					<div class="button-group">
						<button type="submit" class="btn btn-primary">Create Role</button>
						<a href="/admin/roles" class="btn btn-danger">Cancel</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>