<div class="error-container">
    <div class="error-content">
        <h1 class="error-title">
            <%= status %> - <%= title %>
        </h1>

        <div class="error-message">
            <h2><%= message %></h2>
            <% if (description) { %>
            <p><%= description %></p>
            <% } %>
            <% if (url) { %>
            <p>Path: <code><%= url %></code></p>
            <% } %>
        </div>
        <% if (process.env.NODE_ENV === 'development' && stack) { %>
            <div class="error-stack">
                <pre><code><%= stack %></code></pre>
            </div>
        <% } %>
        <div class="error-actions" style="width: 100%;text-align: center;margin-top:2rem;">
            <a href="/<%=(typeof isAuthenticated !== 'undefined' && isAuthenticated) ? 'dashboard' : '' %>" class="btn btn-primary" style="margin: 0 auto;">
                <i class="fas fa-home"></i> Return to Homepage
            </a>
        </div>
    </div>
</div>